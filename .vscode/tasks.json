{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "‚ö° Quick Commit",
      "type": "shell",
      "command": "./quick-commit.sh",
      "args": ["${input:commitMessage}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "üîÑ Auto Commit",
      "type": "shell", 
      "command": "./quick-commit.sh",
      "args": ["auto"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "üìä Git Status",
      "type": "shell",
      "command": "git",
      "args": ["status", "--short"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "üìú Git Log",
      "type": "shell",
      "command": "git",
      "args": ["log", "--oneline", "-10", "--graph"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "‚Ü©Ô∏è Undo Last Commit",
      "type": "shell",
      "command": "git",
      "args": ["reset", "--soft", "HEAD~1"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "description": "Nh·∫≠p commit message",
      "default": "üîÑ Update code",
      "type": "promptString"
    }
  ]
}
