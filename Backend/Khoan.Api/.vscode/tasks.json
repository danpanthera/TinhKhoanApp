{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "ğŸš€ Start Backend API",
			"type": "shell",
			"command": "./start_backend.sh",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"runOptions": {
				"instanceLimit": 1
			}
		},
		{
			"label": "ğŸ³ Start Database",
			"type": "shell",
			"command": "./start_database.sh",
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"runOptions": {
				"instanceLimit": 1
			}
		},
		{
			"label": "ğŸš€ Start Full App (Database + Backend + Frontend)",
			"type": "shell",
			"command": "./start_full_app.sh",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"runOptions": {
				"instanceLimit": 1
			}
		},
		{
			"label": "ğŸ”¨ Build Backend",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Debug",
				"--verbosity",
				"minimal"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"runOptions": {
				"instanceLimit": 1
			}
		},
		{
			"label": "ğŸ§ª Test Backend",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"--verbosity",
				"normal"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "ğŸ—„ï¸ Database Update",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"ef",
				"database",
				"update"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "ğŸ“„ Add Migration",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"ef",
				"migrations",
				"add",
				"${input:migrationName}"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "ğŸ§¹ Clean Backend",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"clean"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "ğŸ“¦ Restore Packages",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"restore"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "ğŸ”¨ Build Backend (verify NGAY_DL datetime2 updates)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Debug",
				"--verbosity",
				"minimal"
			],
			"group": "build"
		},
		{
			"label": "ğŸ”¨ Build Backend (verify NGAY_DL datetime2 updates)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Debug",
				"--verbosity",
				"minimal"
			],
			"group": "build"
		}
	],
	"inputs": [
		{
			"id": "migrationName",
			"description": "Enter migration name",
			"default": "NewMigration",
			"type": "promptString"
		}
	]
}