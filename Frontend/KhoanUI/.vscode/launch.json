{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "ğŸ¨ Launch Frontend Dev Server",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "dev"],
			"serverReadyAction": {
				"pattern": "Local:\\s+(https?://\\S+)",
				"uriFormat": "%s",
				"action": "openExternally"
			},
			"console": "integratedTerminal",
			"internalConsoleOptions": "openOnSessionStart",
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"name": "ğŸ“¦ Build Frontend",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "build"],
			"console": "integratedTerminal"
		},
		{
			"name": "ğŸ‘€ Preview Build",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run", "preview"],
			"serverReadyAction": {
				"pattern": "Local:\\s+(https?://\\S+)",
				"uriFormat": "%s",
				"action": "openExternally"
			},
			"console": "integratedTerminal"
		},
		{
			"name": "ğŸ” Type Check",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npx",
			"runtimeArgs": ["vue-tsc", "--noEmit"],
			"console": "integratedTerminal"
		}
	],
	"compounds": [
		{
			"name": "ğŸ¯ Build & Preview Frontend",
			"configurations": ["ğŸ“¦ Build Frontend", "ğŸ‘€ Preview Build"],
			"stopAll": true
		}
	]
}
