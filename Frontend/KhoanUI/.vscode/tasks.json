{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üé® Start Frontend Dev Server",
            "type": "shell",
            "command": "./start_frontend.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "üì¶ Build Frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üëÄ Preview Build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "preview"
            ],
            "group": "build",
            "dependsOn": "üì¶ Build Frontend",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üßπ Clean Frontend",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "clean"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üîÑ Clean & Reinstall",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "clean-all"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üì¶ Install Dependencies",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üîç Type Check",
            "type": "shell",
            "command": "npx",
            "args": [
                "vue-tsc",
                "--noEmit"
            ],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
