{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "ğŸ¨ Start Frontend Dev Server",
			"type": "shell",
			"command": "./start_frontend.sh",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"runOptions": {
				"instanceLimit": 1
			}
		},
		{
			"label": "ğŸ“¦ Build Frontend",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "ğŸ‘€ Preview Build",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"preview"
			],
			"group": "build",
			"dependsOn": "ğŸ“¦ Build Frontend",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "ğŸ§¹ Clean Frontend",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"clean"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "ğŸ”„ Clean & Reinstall",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"clean-all"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "ğŸ“¦ Install Dependencies",
			"type": "shell",
			"command": "npm",
			"args": [
				"install"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "ğŸ” Type Check",
			"type": "shell",
			"command": "npx",
			"args": [
				"vue-tsc",
				"--noEmit"
			],
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Build Backend (Khoan)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"/opt/Projects/Khoan/Backend/Backend.sln",
				"-clp:NoSummary;Verbosity=minimal"
			],
			"isBackground": false,
			"problemMatcher": [
				"$msbuild-stylish"
			],
			"group": "build"
		}
	]
}